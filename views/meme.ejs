<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Meme Center</title>

  <link href="https://fonts.googleapis.com/css?family=Montserrat|Ubuntu" rel="stylesheet">

  <link rel="stylesheet" href="css/styles.css">

  <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>

</head>

<body>

  <div class="title">
    <center>
      <h1>XMeme</h1>
    </center>
  </div>

  <div class="container-fluid">
    <div class="templ">
      <br />
      <div class="form-login">

        <h3> Submit your meme here</h3>

        <form method="POST" action="/">
          <input type="text" name="name" class="form-control input-sm chat-input" placeholder="Name" required autocomplete="off" autofocus>
          <br>
          <input type="text" name="caption" class="form-control input-sm chat-input" placeholder="Caption" required autocomplete="off">
          <br>
          <input type="text" name="url" class="form-control input-sm chat-input" placeholder="URL" required autocomplete="off">
          <br>
          <div class="wrapper">
            <span class="group-btn">
              <button class="btn btn-primary btn-md" type="submit">Submit <i class="fas fa-sign-in-alt"></i></button>
            </span>
          </div>
        </form>

      </div>
    </div>

    <br />
    <div class="title">
      <center>
        <h1>Memes List</h1>
      </center>
    </div>


    <div class="templ">
      <% let len = allMemes.length; %>
      <% for (let i = len-1; i >= Math.max(0, len-100); i--) { %>
      <br />
      <div class="item">
        <p><strong>Name : </strong><%=  allMemes[i].name  %></p>
        <p><strong>Caption : </strong><%=  allMemes[i].caption  %></p>
        <img src="<%=  allMemes[i].url  %>" alt="Meme" width="600" height="500" />
        <form action="/edit" method="POST">
          <div class="wrapper">
            <span class="group-btn">
              <button class="btn btn-primary btn-md" name="index" type="submit" value="<%=  allMemes[i].id  %>">Edit </button>
            </span>
          </div>
        </form>
      </div>
      <br />
      <% } %>
    </div>

  <div class="footer">
    <center>
      Copyright Â© XMeme
    </center>
  </div>
  </div>
</body>

</html>
